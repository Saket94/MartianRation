@model MartianRation.Models.PacketRationModel
@{
    ViewBag.Title = "Delete";
}

@using (Html.BeginForm("Delete", "Ration", FormMethod.Post, new { id = "popupForm" }))
{
    @Html.HiddenFor(m=>m.PacketId)  

    <div class="form-group">
        <label>Packet Type</label>
        <p>@Model.PacketTypeName</p>      
    </div>

    <div class="form-group">
        <label>Packet Content</label>
        <p>@Model.PacketContent</p>
    </div>

    <div class="form-group">
        <label>Quantity</label>
        <p>@Model.Quantity</p>
    </div>

    <div class="form-group">
        <label>Expiry Date</label>
        <p>@Model.ExpiryDate</p>
    </div>

    <div class="form-group">
        <label>Calories</label>
        <p>@Model.Calories</p>
    </div>

    <div>
        <input type="submit" value="Delete" class="btn btn-danger"/>
    </div>
}