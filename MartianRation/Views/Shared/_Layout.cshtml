<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
   
    <link href="~/Scripts/DataTable/CSS/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Scripts/DataTable/CSS/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="~/Scripts/CSS/jquery-ui.min.css" rel="stylesheet" />
    <style>
        span.field-validation-error {
            color: red;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Ration Management", "PacketRation", "Ration", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">                   
                    <li>@Html.ActionLink("View Schedule", "Index", "ViewSchedule")</li>
                    <li>@Html.ActionLink("Ration", "PacketRation", "Ration")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <br/>
            <p>&copy; @DateTime.Now.Year - Ration Management</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/customBootStrap")
    @Scripts.Render("~/bundles/customJs")
    @*@Scripts.Render("~/bundles/jquery")*@
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
